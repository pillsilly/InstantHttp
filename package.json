{
  "name": "instantly_http",
  "version": "1.1.11",
  "description": "Tool to instantly create your own http server for development-use",
  "bin": "./dist/bin.js",
  "main": "./dist/index.js",
  "scripts": {
    "testpack": "rm ./tmp/* -rf &&  npm pack --pack-destination=./tmp",
    "test": "npx jest --debug",
    "lint": "tsc --noEmit",
    "compile:prod": "rm -f dist/* && npx tsup && ls -lha dist",
    "prerelease": "npm run compile:prod",
    "release": "npx release-it",
    "prebuild-binary": "rm executable/* -f && npx esbuild src/bin.ts --bundle --platform=node --minify --target=node18 --outdir=executable  && ls -lha executable/*",
    "build-binary": "pkg ./executable/bin.js --targets=node18 --compress=Brotli -d --public-packages=* -o=executable/instant_http && ls -lha executable"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "tsup": {
    "entry": [
      "src/index.ts",
      "src/bin.ts"
    ],
    "clean": true,
    "dts": true,
    "format": [
      "cjs",
      "esm"
    ]
  },
  "author": "pillsilly",
  "license": "MIT",
  "dependencies": {
    "chrome-launcher": "^1.0.0",
    "commander": "^11.0.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "http-proxy-middleware": "^2.0.6"
  },
  "keywords": [
    "http",
    "server",
    "cli",
    "serve",
    "development",
    "tool",
    "http server"
  ],
  "homepage": "https://github.com/pillsilly/InstantHttp",
  "devDependencies": {
    "@babel/preset-env": "^7.22.20",
    "@babel/preset-typescript": "^7.22.15",
    "@types/compression": "^1.7.3",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.5",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "esbuild": "^0.19.3",
    "esbuild-jest": "^0.5.0",
    "eslint": "^8.50.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard-with-typescript": "^39.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29",
    "pkg": "^5.8.1",
    "prettier": "^3.0.3",
    "release-it": "^16.1.5",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2"
  },
  "prettier": {
    "jsxSingleQuote": true,
    "singleQuote": true,
    "bracketSpacing": false,
    "useTabs": false,
    "trailingComma": "es5"
  },
  "files": [
    "/dist",
    "package.json"
  ]
}
